    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Django",
            "type": "debugpy",
            "request": "launch",
            "args": [
                "runserver",
                "--settings=singularity.settings" // Assuming 'singularity' is your project settings folder inside 'backend'
            ],
            "django": true,
            "autoStartBrowser": false,
            "program": "${workspaceFolder}/backend/manage.py", // manage.py is in the backend folder
            "python": "${workspaceFolder}/.venv/Scripts/python.exe", // Python from .venv at the workspace root (for Windows)
            "env": {
                "DEBUG": "True",
                "SECRET_KEY": "django-insecure-h7l9y2=x3$ol6eig9hxfz8v+g0@p2y=i-z#@2=_5#ao27p#8bn",
                "DATABASE_URL": "postgres://singularity_user:postgress@localhost:5432/singularity_db",
                "ALLOWED_HOSTS": "localhost,127.0.0.1",
                "CORS_ORIGIN_WHITELIST": "http://localhost:3000,http://127.0.0.1:3000",
                "PYTHONPATH": "${workspaceFolder}/backend:${env:PYTHONPATH}", // Add backend to PYTHONPATH
                "DJANGO_SETTINGS_MODULE": "singularity.settings" // Explicitly set settings module
            },
            "cwd": "${workspaceFolder}/backend" // Set current working directory to backend
        }
    ]
}